<Tabs @ref="tabs" EnableFadeEffect="true">
    @if (listaEsquemas != null && listaEsquemas.Any() && resultData != null)
    {
        bool isFirstTab = true;
        @foreach (var esquema in listaEsquemas)
        {

            <Tab Active="isFirstTab" style="font-size: 11px !important;">
                <TitleTemplate>
                    <Tooltip Title="@esquema.TooltipWeb">@esquema.MostrarWeb</Tooltip>
                </TitleTemplate>
                <Content>
                    <div class="py-2">
                        <EsquemaModalGrillaTab IdEsquema="@esquema.IdEsquema"
                                               idONA="@resultData.IdONA"
                                               VistaPK="@resultData.VistaPK"
                                               VistaFK="@resultData.VistaFK"
                                               Texto="@resultData.Texto" />
                    </div>
                </Content>
            </Tab>
            isFirstTab = false;
        }
    }
    else
    {
        <div class="alert alert-warning" style="font-size: 11px !important;">
            No se encontraron esquemas o los datos no estan cargados correctamente.
        </div>
    }
</Tabs>