@page "/"
@page "/persona"
@using SharedApp.Dtos

<link href="/css/buscador-can/index-buscador-can.css" rel="stylesheet">

<div class="panel-buscador-can">
    <div style="flex: 1; display: flex; flex-direction: column; overflow: hidden;">
        <Banner />

        <div style="display: flex; flex-direction: row; width: 100%;">
            <InputSearch onClickSearch="@(x => onClickSearch(x.Item1, x.Item2))" />
            <SummaryCards PanelONA="PanelONA" HandlePanelONAChange="HandlePanelONAChange" />
        </div>

        <InputFilters onFilterChange="@(args => HandleFilterChange(args))"
                      isGridVisibleChanged="@(value => isGridVisibleChanged(value))"
                      isGridVisible="isGridVisible" />

        @if(isGridVisible) {
            <IndexGrilla
                iconUrls="iconUrls"
                ListDataDto="listBuscadorResultadoDataDto"
                listaEtiquetasGrilla="listaEtiquetasGrilla"
            />
        } else {
            <IndexCard
                iconUrls="iconUrls"
                ListDataDto="listBuscadorResultadoDataDto"
                listaEtiquetasGrilla="listaEtiquetasCards"
            />
        }
    </div>

    <InputPaginations
        TotalItems="TotalItems"
        TotalPages="TotalPages"
        DisplayPages="DisplayPages"
        ActivePageNumber="ActivePageNumber"
        ActivePageNumberChanged="ActivePageNumberChanged"
        DisplayPagesChanged="DisplayPagesChanged"
    />
</div>