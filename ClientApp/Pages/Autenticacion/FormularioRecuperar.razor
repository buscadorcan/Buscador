<EditForm Model="usuarioRecuperacion" OnValidSubmit="RecuperarClave">
    <DataAnnotationsValidator />

    <div class="login-1">
        <img class="frame" src="/login/img/frame-1.svg" alt="Frame" />
        <div class="frame-885">

            <!-- Campos de Entrada -->
            <div class="frame-8">
                <div class="input">
                    <div class="label valign-text-middle bodyregular-600">Ingrese su email</div>
                    <InputText @bind-Value="usuarioRecuperacion.Email" style="color: black;"
                        class="frame-1098 frame-1098 input-form input-2 valid your-text-here valign-text-middle bodyregular"
                               placeholder="Email..." />
                    <ValidationMessage For="(() => usuarioRecuperacion.Email)" />
                </div>
            </div>

            <!-- Botones -->
            <div class="frame-1000004179">
                <div class="frame-8">
                    <Button @ref="saveButton" Type="ButtonType.Submit" class="button label valign-text-middle inter-regular-normal-comet-14px">
                        <div class="button-1 headlineheadline5-h5">Recuperar Clave</div>
                    </Button>
                </div>

                <div class="recuperar-contrasea bodysmall">
                    <Button Type="ButtonType.Link" Color="ButtonColor.Link" @onclick="GoLoginPage" Style="
                        font-size: var(--font-size-m) !important;
                        color: var(--catalina-blue) !important;
                        cursor: pointer !important;
                        font-weight: 400 !important;
                        line-height: 17px !important;
                        position: relative !important;
                        white-space: nowrap !important;
                        width: fit-content !important;">
                        Login
                    </Button>
                </div>
            </div>
        </div>
    </div>
</EditForm>
