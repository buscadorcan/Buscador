@page "/acceder"

<PageTitle>Acceder</PageTitle>

<!-- Referenciando los CSS directamente -->
<link rel="stylesheet" type="text/css" href="/login/css/login-2.css" />
<link rel="stylesheet" type="text/css" href="/login/css/styleguide.css" />
<link rel="stylesheet" type="text/css" href="/login/css/globals.css" />

<div class="container-center-horizontal">
    <div class="login-2 screen">
        <div class="login">
            <div class="component-10">
                <img class="arrow_back" src="/login/img/arrow-back.svg" alt="arrow_back" />
                <div class="back">Atrás</div>
            </div>
            <EditForm Model="usuarioAutenticacion" OnValidSubmit="AccesoUsuario">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="login-1">
                    <img class="frame" src="/login/img/frame-1.svg" alt="Frame" />
                    <div class="frame-885">
                        <div class="frame-882">
                            <h1 class="title">Iniciar Sesión</h1>
                            <p class="inicia-sesin-para-acceder-a-tu-cuenta">Inicia sesión para acceder a tu cuenta</p>
                        </div>

                        <!-- Campos de Entrada -->
                        <div class="frame-8">
                            <div class="input">
                                <div class="label valign-text-middle bodyregular-600">Tu Correo Electrónico</div>
                                <InputText @bind-Value="usuarioAutenticacion.Email" placeholder="julio@gmail.com" class="form-control inter-regular-normal-comet-14px" />
                                <ValidationMessage For="(() => usuarioAutenticacion.Email)" />
                            </div>
                            <div class="input-form input-2">
                                <div class="label-text bodyregular-600">Contraseña</div>
                                <InputText @bind-Value="usuarioAutenticacion.Clave" type="password" placeholder="Password" class="form-control inter-regular-normal-comet-14px" />
                                <ValidationMessage For="(() => usuarioAutenticacion.Clave)" />
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="frame-1000004179">
                            <div class="frame-8">
                                <Button @ref="saveButton" Type="ButtonType.Submit" class="button">
                                    <div class="button-1 headlineheadline5-h5">Iniciar Sesión</div>
                                </Button>
                            </div>
                            <div class="recuperar-contrasea bodysmall">
                                <Button Type="ButtonType.Link" Color="ButtonColor.Link" To="recuperar">Recuperar contraseña</Button>
                            </div>
                        </div>
                    </div>
                </div>
            </EditForm>

            <div class="sign-up">
                <p class="no-tienes-una-cuent">¿No tienes una cuenta en la Comunidad Andina?</p>
                <div class="text-button">Crear Cuenta</div>
            </div>
        </div>
        <img class="login470px" src="/login/img/login470px.png" alt="login470px" />
    </div>
</div>




