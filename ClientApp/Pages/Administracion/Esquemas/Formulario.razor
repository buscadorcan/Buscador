<PageTitle>Formulario de Esquema</PageTitle>

<EditForm EditContext="@editContext" class="pt-4">

    <div class="card border p-4">
        <h1 class="title headlineheadline2-h2">Esquema Homologado</h1>

        <hr style="background-color:aliceblue" />
        <div class="form-row py-2">
            <label class="label valign-text-middle inter-regular-normal-comet-16px">Mostrar web</label>
            <div class="col">
                <InputText @bind-Value="Esquema.MostrarWeb" class="form-control" placeholder="Mostrar web..." style="margin-top: 2% !important;" />
            </div>
        </div>

        <div class="form-row py-2">
            <label class="label valign-text-middle inter-regular-normal-comet-16px">Tooltip Web</label>
            <div class="col">
                <InputText @bind-Value="Esquema.TooltipWeb" class="form-control" placeholder="Tooltip Web..." style="margin-top: 2% !important;" />
            </div>
        </div>
        <div class="form-row py-2">
            <label class="label valign-text-middle inter-regular-normal-comet-16px">Esquema Vista</label>
            <div class="col">
                <InputText @bind-Value="Esquema.EsquemaVista" class="form-control" placeholder="Esquema vista..." style="margin-top: 2% !important;" />
            </div>

        </div>

