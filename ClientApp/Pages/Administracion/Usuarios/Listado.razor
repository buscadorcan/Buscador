                    <div class="frame-1000003808">
                        <img class="arrow_downward_alt" src="admin/img/arrow-downward-alt-5.svg" alt="arrow_downward_alt">
                    </div>
                </div>
            </div>
            <div class="table-heading-1 table-heading-10">
                <div class="header-label-1 header-label-4">
                    <div class="label-heading headingheadline5-h5">Email</div>
                    <div class="frame-1000003808">
                        <img class="arrow_downward_alt" src="admin/img/arrow-downward-alt-6.svg" alt="arrow_downward_alt">
                    </div>
                </div>
            </div>
            <div class="table-heading-1 table-heading-10">
                <div class="header-label-1 header-label-4">
                    <div class="label-heading headingheadline5-h5">Rol</div>
                    <div class="frame-1000003808">
                        <img class="arrow_downward_alt" src="admin/img/arrow-downward-alt-7.svg" alt="arrow_downward_alt">
                    </div>
                </div>
            </div>
            <div class="table-heading-1 table-heading-10">
                <div class="header-label-1 header-label-4">
                    <div class="label-heading headingheadline5-h5">Razón Social</div>
                    <div class="frame-1000003808">
                        <img class="arrow_downward_alt" src="admin/img/arrow-downward-alt-8.svg" alt="arrow_downward_alt">
                    </div>
                </div>
            </div>
            <div class="table-heading-1 table-heading-10">
                <div class="header-label-1 header-label-4">
                    <div class="label-heading headingheadline5-h5">Estado</div>
                    <div class="frame-1000003808">
                        <img class="arrow_downward_alt" src="admin/img/arrow-downward-alt-9.svg" alt="arrow_downward_alt">
                    </div>
                </div>
            </div>
            <div class="table-heading-1 table-heading-10">
                <div class="header-label-1 header-label-4">
                    <div class="label-heading headingheadline5-h5">Editar</div>
                </div>
            </div>
            <div class="table-heading-1 table-heading-10">
                <div class="header-label-1 header-label-4">
                    <div class="label-heading headingheadline5-h5">Eliminar</div>
                </div>
            </div>
        </div>

        @if (listaUsuarios != null && listaUsuarios.Any())
        {
            <div class="content content-2">
                @foreach (var usuario in listaUsuarios)
                {
                    <div class="row row-15">
                        <div class="componente">
                            <div class="row-1 row-15">
                                <div class="ads-rules-list">
                                    <div class="landing-page"><div class="bodybody-small">@usuario.Nombre</div></div>
                                    <div class="landing-page"><div class="bodybody-small">@usuario.Apellido</div></div>
                                    <div class="landing-page"><div class="bodybody-small">@usuario.Telefono</div></div>
                                    <div class="landing-page"><div class="bodybody-small">@usuario.Email</div></div>
                                    <div class="landing-page"><div class="bodybody-small">@usuario.Rol</div></div>
                                    <div class="landing-page"><div class="bodybody-small">@usuario.RazonSocial</div></div>
                                    <div class="landing-page"><div class="bodybody-small">@usuario.Estado</div></div>
                                    <div class="landing-page">
                                        <Tooltip Title="Editar registro">
                                            <Button Type="ButtonType.Link" Color="ButtonColor.Secondary" Outline="true" Size="ButtonSize.Small" Disabled="isRolRead"
                                                    @onclick=@(() => EditarUsuario(usuario))>
                                                <Icon Name="IconName.PencilSquare" />
                                            </Button>
                                        </Tooltip>
                                    </div>
                                    <div class="landing-page">
                                        <Tooltip Title="Eliminar registro">
                                            <Button @ref="saveButton" Type="ButtonType.Button" Color="ButtonColor.Danger" Outline="true" Disabled="isRolRead"
                                                    Size="ButtonSize.Small" @onclick=@(() => OpenDeleteModal(usuario.IdUsuario))>
                                                <Icon Name="IconName.Trash" />
                                            </Button>
                                        </Tooltip>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No hay datos disponibles.</p>
        }
    </div>
